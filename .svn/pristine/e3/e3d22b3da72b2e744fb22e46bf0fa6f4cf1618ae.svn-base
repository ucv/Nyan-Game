/**
 * Css de la page de connexion
 */
.topDescription {
	font-family:Fipps, sans-serif;
	font-size: 1.3em;
	position: absolute;
	left: 350px;
	top: 150px;
	text-shadow: 1px 1px 2px #bbb;
}

.botDescription {
	font-family:Fipps, sans-serif;
	font-size: 1em;
	position: absolute;
	left: 100px;
	top: 530px;
	text-shadow: 1px 1px 1px #bbb;
}

.loginBackground {
	position: absolute;
	height: 640px;
	width: 1136px;
	background-image: url(../assets/img/sprite/ui/loginBackground.png);
}


.textBoxLogin {
	position: absolute;
	left: 415px;
	top: 230px;
	text-align:center;
	font-family:Fipps, sans-serif;
	font-size: 0.7em;

	background: #F1F1F1 url(../assets/img/spritesheet/ui/iconeLogin.png) no-repeat;
    background-position: 5px 3px !important;
    padding: 10px 10px 10px 25px;
    width: 300px;
    border: 1px solid #CCC;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    -moz-box-shadow: 0 1px 1px #ccc inset, 0 1px 0 #fff;
    -webkit-box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
    box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
}

.textBoxLogin:focus {
    background-color: #FFF;
    border-color: #E8C291;
    outline: none;
    -moz-box-shadow: 0 0 0 1px #e8c291 inset;
    -webkit-box-shadow: 0 0 0 1px #E8C291 inset;
    box-shadow: 0 0 0 1px #E8C291 inset;
}

.textBoxPassword {
	position: absolute;
	left: 415px;
	top: 305px;
	text-align:center;
	font-family:Fipps, sans-serif;
	font-size: 0.8em;

	background: #F1F1F1 url(../assets/img/spritesheet/ui/iconeLogin.png) no-repeat;
    background-position: 5px -48px !important;
    padding: 10px 10px 10px 25px;
    width: 300px;
    border: 1px solid #CCC;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    -moz-box-shadow: 0 1px 1px #ccc inset, 0 1px 0 #fff;
    -webkit-box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
    box-shadow: 0 1px 1px #CCC inset, 0 1px 0 #FFF;
}

.textBoxPassword:focus {
    background-color: #FFF;
    border-color: #E8C291;
    outline: none;
    -moz-box-shadow: 0 0 0 1px #e8c291 inset;
    -webkit-box-shadow: 0 0 0 1px #E8C291 inset;
    box-shadow: 0 0 0 1px #E8C291 inset;
}

.buttonConnection {
    position: absolute;
    text-align:center;
    font-family:Fipps, sans-serif;
    font-size: 0.9em;
    left: 460px;
    top: 400px;
    height: 59px;
    width: 207px;
    background-image: url(../assets/img/sprite/ui/buttonStatic.png);
    cursor:pointer;
}

.buttonConnection:hover {
    background-image: url(../assets/img/sprite/ui/buttonSurvol.png);
    left: 451px;
    top: 392px;
    height: 77px;
    width: 222px;
}

.buttonConnection:active {
    background-image: url(../assets/img/sprite/ui/buttonPress.png);
    left: 460px;
    top: 407px;
    height: 52px;
    width: 203px;
}