/**
 * Css de Options
 */
#Options {
	position: absolute;
	background-repeat: no-repeat;
}


.optionsText {
    margin-right: 340px;
    margin-top: 10px;
}


.title {
    text-align: center;
    padding-top: 20;
    font-size: 1.3em;
}


.desc {
	text-align: center;
	line-height: 150%;
    padding-top: 10;
}


.buttonClose {
    position: absolute;
    text-align: center;
    font-family:Fipps, sans-serif;
    font-size: 0.9em;
    left: 280px;
    top: 330px;
    height: 74px;
    width: 206px;
    cursor:pointer;
    padding-top: 5px;
}

section {  
    width: 150px;  
    height: auto;  
    margin: 100px auto 0;  
    position: absolute;  
}

.slider {  
    border-width: 1px;  
    border-style: solid;  
    border-color: #333 #333 #777 #333;  
    border-radius: 10px;  
    width: 391px;  
    position: absolute;  
    height: 15px;  
    background-color: #8e8d8d;  
    background: url('../assets/img/sprite/ui/volumeBar/bg-track.png') no-repeat;  
    box-shadow: inset 0 1px 5px 0px rgba(0, 0, 0, .5),   
        0 1px 0 0px rgba(250, 250, 250, .5);  
    left: 0px;  
}

.tooltip {  
    position: absolute;  
    display: block;  
    top: -25px;  
    width: 35px;  
    height: 20px;  
    color: #fff;  
    text-align: center;  
    font: 10pt Tahoma, Arial, sans-serif ;  
    border-radius: 3px;  
    border: 1px solid #333;  
    box-shadow: 1px 1px 2px 0px rgba(0, 0, 0, .3);  
    box-sizing: border-box;  
    background: linear-gradient(top, rgba(69,72,77,0.5) 0%,rgba(0,0,0,0.5) 100%);  
}

.volume {  
    display: inline-block;  
    width: 25px;  
    height: 25px;  
    right: -5px;  
    background: url('../assets/img/sprite/ui/volumeBar/volume.png') no-repeat 0 -50px;  
    position: absolute;  
    margin-top: -5px;  
}

.ui-slider-handle {  
    position: absolute;  
    z-index: 2;  
    width: 56px;  
    height: 35px;  
    cursor: pointer;  
    background: url('../assets/img/sprite/ui/volumeBar/handle.png') no-repeat 50% 50%;  
    font-weight: bold;  
    color: #1C94C4;  
    outline: none;  
    top: -7px;  
    margin-left: -12px;  
}

.ui-slider-range {  
    background: linear-gradient(top, #ffffff 0%,#eaeaea 100%);  
    position: absolute;  
    border: 0;  
    top: 0;  
    height: 100%;  
    border-radius: 25px;  
}