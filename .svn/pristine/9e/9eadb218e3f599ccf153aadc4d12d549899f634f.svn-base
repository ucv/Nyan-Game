/**
 * Css de la page popUp "Jouer" : LevelSelect
 */
.buttonClose {
    position: absolute;
    text-align: center;
    font-family:Fipps, sans-serif;
    font-size: 0.9em;
    left: 280px;
    top: 330px;
    height: 74px;
    width: 206px;
    cursor:pointer;
    padding-top: 5px;
}

#descTitleLevelSelect {
    position: absolute;
    font-size: 1em;
    top: 25px;
    left: 215px;
    text-shadow: 1px 1px 1px #bbb;
}

.btn {
    background-repeat: no-repeat;
    background-size: 100% 100%;
    position: absolute;
    width: 87px;
    height: 66px;
    top: 108px;
    left: 140px;
}

.btn span {
    padding-left: 33px;
}

.btnLevel {
    cursor: pointer;
}

.btnLock {
    cursor: not-allowed;
}

.star {
    background-repeat: no-repeat;
    position: absolute;
    width: 16px;
    height: 16px;
}