/**
 * Css de Options
 */
#Options {
	position: absolute;
	background-repeat: no-repeat;
}


.optionsText {
    margin-top: -5px;
}


.title {
    text-align: center;
    padding-top: 20;
    font-size: 1.3em;
}


.desc {
	text-align: center;
	line-height: 150%;
    padding-top: 10;
}


.buttonClose {
    position: absolute;
    text-align: center;
    font-family:Fipps, sans-serif;
    font-size: 0.9em;
    left: 280px;
    top: 330px;
    height: 74px;
    width: 206px;
    cursor:pointer;
    padding-top: 5px;
}

section {  
    position: absolute;  
}

#textVolume {
    position: absolute;
    font-size: 1em;
    top: 55px;
    left: 50px;
}

#descTitle {
    position: absolute;
    font-size: 1em;
    top: 211px;
    left: 50px;
}

#textGlobal {
    position: absolute;
    font-size: 0.8em;
    top: 100px;
    left: 70px;
}

#textMusic {
    position: absolute;
    font-size: 0.8em;
    top: 140px;
    left: 70px;
}


#textSfx {
    position: absolute;
    font-size: 0.8em;
    top: 180px;
    left: 70px;
}

.slider {  
    position: absolute;  
    border-width: 1px;  
    border-style: solid;  
    border-color: #333 #333 #777 #333;  
    border-radius: 10px;  
    width: 391px;  
    height: 15px;  
    background-color: #8e8d8d;  
    background: url('../assets/img/sprite/ui/volumeBar/bg-track.png') no-repeat;  
    box-shadow: inset 0 1px 5px 0px rgba(0, 0, 0, .5),   
        0 1px 0 0px rgba(250, 250, 250, .5);  
}

.tooltip {  
    position: absolute;
    margin-top: -21px;
    left: 415px;
    width: 50px;
    text-align: center;
    font-size: 16px;
    box-sizing: border-box;  
    background: linear-gradient(top, rgba(69,72,77,0.5) 0%,rgba(0,0,0,0.5) 100%);
}

#bar {
    position: absolute;
    top: 20px;
    left: 220px;
}


.barGlobal {
    top: 100px;
}


.barMusic {
    top: 140px;
}


.barSfx {
    top: 180px;
}


.ui-slider-handle {  
    position: absolute;  
    z-index: 2;  
    width: 56px;  
    height: 35px;  
    cursor: pointer;  
    background: url('../assets/img/sprite/ui/volumeBar/handle.png') no-repeat 50% 50%;  
    font-weight: bold;  
    color: #1C94C4;  
    outline: none;  
    top: -10px;  
    margin-left: -30px;  
}

.ui-slider-range {  
    position: absolute;  
    background: linear-gradient(top, #ffffff 0%,#eaeaea 100%);  
    border: 0;  
    top: 0;  
    height: 100%;  
    border-radius: 25px;  
}

.flag {
    position: absolute;
    height: 42px;
    width: 36px;
    top: 272px;
    cursor: pointer;
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

#frenchFlag {
    left: 75px;
}

#englishFlag {
    left: 130px;
}

#germanFlag {
    left: 185px;
}

#spanishFlag {
    left: 240px;
}

#italianFlag {
    left: 295px;
}

#polandFlag {
    left: 350px;
}